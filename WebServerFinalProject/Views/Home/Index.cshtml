@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<section class="cozy-hero container py-5 py-lg-6 text-center">
    <h1 class="display-5 fw-normal mb-3">
        <span class="welcome-prefix">Welcome to</span>
        <span class="brand-script">
            <span class="cozy">Cozy</span><span class="b">B</span><span class="a">a</span><span class="k">k</span><span class="e">e</span><span class="s">s</span>
        </span>
    </h1>
    <p class="lead text-body-secondary mx-auto" style="max-width: 860px;">
        Your cozy corner for discovering delicious recipes, finding ingredient substitutes,
        and getting inspired to bake for every season and occasion.
    </p>
    <div class="mt-3">
        <a class="btn btn-lg btn-teal" href="~/Recipes">Explore Recipes</a>
    </div>
</section>

<section class="container pb-5">
    <div class="row g-4">
        <div class="col-12 col-md-6 col-lg-3">
            <div class="feature-card card h-100 text-center p-3">
                <div class="feature-icon mx-auto mb-2 feature-pink"></div>
                <h3 class="h6 mb-1">Discover Recipes</h3>
                <p class="small text-body-secondary mb-0">Browse our collection of tested and loved baking recipes</p>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="feature-card card h-100 text-center p-3">
                <div class="feature-icon mx-auto mb-2 feature-peach"></div>
                <h3 class="h6 mb-1">Find Substitutes</h3>
                <p class="small text-body-secondary mb-0">Out of an ingredient? Find the perfect substitute</p>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="feature-card card h-100 text-center p-3">
                <div class="feature-icon mx-auto mb-2 feature-teal"></div>
                <h3 class="h6 mb-1">Seasonal Baking</h3>
                <p class="small text-body-secondary mb-0">Get inspired by seasonal flavors and occasions</p>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="feature-card card h-100 text-center p-3">
                <div class="feature-icon mx-auto mb-2 feature-mint"></div>
                <h3 class="h6 mb-1">Baking Tips</h3>
                <p class="small text-body-secondary mb-0">Learn techniques and tips from baking experts</p>
            </div>
        </div>
    </div>
</section>

