<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="icon" type="image/png" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- CozyBakes Theme -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500;600&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Leckerli+One&family=Quicksand:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<body class="cozy-body d-flex flex-column min-vh-100">

    <!-- HEADER / NAV -->
    <header class="cozy-header">

        <!-- Top logo bar -->
        <div class="cozy-topbar container d-flex justify-content-center justify-content-md-start align-items-center">
            <a class="navbar-brand d-inline-flex align-items-center gap-1" href="~/">
                <span class="brand-script">
                    <span class="cozy">Cozy</span><span class="b">B</span><span class="a">a</span><span class="k">k</span><span class="e">e</span><span class="s">s</span>
                </span>
            </a>
        </div>

        <!-- Navigation bar -->
        <nav class="cozy-nav-bar">
            <ul class="navbar-nav flex-row justify-content-center flex-wrap">

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Recipes" asp-action="Index">Recipes</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Recipes" asp-action="Season" asp-route-category="Fall">Seasonal</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Recipes" asp-action="Type" asp-route-type="Cookies">By Type</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="AboutHobby">Tips</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>

                <!-- ⭐ NEW: Database Info Link -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="DatabaseInfo">Database Info</a>
                </li>

            </ul>
        </nav>
    </header>

    <!-- PAGE CONTENT -->
    <main class="flex-grow-1 py-4">
        <div class="container content-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="cozy-footer border-top mt-auto">
        <div class="container text-center py-4 small">
            <div class="brand-script small mb-1">
                <span class="cozy">Cozy</span><span class="b">B</span><span class="a">a</span><span class="k">k</span><span class="e">e</span><span class="s">s</span>
            </div>
            <div class="text-body-tertiary">
                © 2025 CozyBakes • Web Server Application Development Group
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
