<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="icon" type="image/png" href="~/favicon.ico" />
<link rel="shortcut icon" type="image/png" href="~/favicon.ico" />

    <!-- Bootstrap for layout/grid -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Our custom site theme -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500;600&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">

</head>

<body class="cozy-body d-flex flex-column min-vh-100">

    <!-- HEADER / NAV -->
    <header class="cozy-header">
        <!-- Top cream band with brand/logo -->
        <div class="cozy-topbar container d-flex justify-content-center justify-content-md-start align-items-center">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <span class="brand-script">Cozy</span><span class="brand-serif">Bakes</span>
            </a>
        </div>

        <!-- Pastel navigation bar -->
        <nav class="cozy-nav-bar">
            <ul class="navbar-nav flex-row justify-content-center flex-wrap">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Recipes" asp-action="Index">Recipes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Recipes" asp-action="Season" asp-route-category="Fall">Seasonal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Recipes" asp-action="Type" asp-route-type="Cookies">By Type</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="AboutHobby">Tips</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- PAGE CONTENT -->
    <main class="flex-grow-1 py-4">
        <div class="container content-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="site-footer">
        &copy; 2025 CozyBakes • Web Server Group Project
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
